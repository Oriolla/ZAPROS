= form_for @criterium do |f|
  - if @criterium.errors.any?
    #error_explanation
      %h2= "#{pluralize(@criterium.errors.count, "error")} prohibited this criterium from being saved:"
      %ul
        - @criterium.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
